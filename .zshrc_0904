DOTFILES_DIR=$HOME/linux_dotfiles
source $DOTFILES_DIR/aliases.sh
source $DOTFILES_DIR/shell_key_bind.zsh

autoload -Uz colors
colors
PROMPT="${bg[green]}%d${reset_color}
"

